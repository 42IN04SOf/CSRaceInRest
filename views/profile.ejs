<%- include partials/_header.ejs %>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span><%=: title | trans %></h1>
        <a href="/logout" class="btn btn-default btn-sm"><%=: 'nav.toLogout' | trans %></a>
        <a href="/race" class="btn btn-default btn-sm"><%=: 'nav.toAllRaces' | trans %></a>
        <a href="/user/<%- user._id %>/owningraces" class="btn btn-default btn-sm"><%=: 'nav.toOwnedRaces' | trans %></a>
        <a href="/user/<%- user._id %>/participatingraces" class="btn btn-default btn-sm"><%=: 'nav.toParticipatingRaces' | trans %></a>
    </div>

    <div class="row">
        <br />
        <h1 class="centered text-center"><%=: 'profile.accountInfo' | trans %></h1>
        <hr />
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="fa fa-user"></span> <%=: 'profile.local' | trans %></h3>
                </div>
                <div class="panel-body">
                    <% if (user.local && user.local.email) { %>
                        <strong><%=: 'attributes.email' | trans %></strong>: <%= user.local.email %><br />
                    <% } else { %>
                        <strong><%=: 'profile.notConnected' | trans %></strong><br />    
                    <% } %>
                </div>
                <div class="panel-footer">
                    <strong><%=: 'attributes.apiToken' | trans %></strong>: <%= user.local.token %><br />
                </div>
            </div>
        </div>
        
        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="fa fa-google-plus"></span> <%=: 'profile.googleAcc' | trans %></h3>
                </div>
                <div class="panel-body">
                    <% if (user.google && user.google.token) { %>
                        <p>
                            <strong><%=: 'attributes.email' | trans %></strong>: <%= user.google.email %><br>
                            <strong><%=: 'attributes.name' | trans %></strong>: <%= user.google.name %>
                        </p>
                    <% } else { %>
                        <strong><%=: 'profile.notConnected' | trans %></strong><br />
                        <a href="/auth/google/authorize" class="btn btn-primary"><%=: 'profile.linkGoogle' | trans %></a>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
    
    <div class="row">
    
        <div class="col-lg-6">
            <br />
            <h1 class="centered text-center"><%=: 'profile.ownedRaces' | trans %></h1>
            <hr />
            <div class="ownedRacesContainer">
                <div class="col-lg-12">
                    <div class="panel panel-default">                    
                        <div class="panel-heading">
                            <h3 class="panel-title">Race name</h3>
                        </div>
                        <div class="panel-body clearfix">
                            <span><strong>Date created: </strong>:Some date:</span><br />
                            <span>
                                <strong>Date started: </strong>
                                :soon(tm):
                            </span><br />
                            <span>
                                <strong>Date stopped: </strong>
                                :soon(tm):
                            </span><br />
                            <span>
                                <strong>Owner</strong>
                                :Some owner:
                            </span><br />
                            <a class="btn btn-primary pull-right" href="#raceId">Race detail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <br />
            <h1 class="centered text-center"><%=: 'profile.participatingRaces' | trans %></h1>
            <hr />
            <div class="ownedRacesContainer">
                <div class="col-lg-12">
                    <div class="panel panel-default">                    
                        <div class="panel-heading">
                            <h3 class="panel-title">Race name</h3>
                        </div>
                        <div class="panel-body clearfix">
                            <span><strong>Date created: </strong>:Some date:</span><br />
                            <span>
                                <strong>Date started: </strong>
                                :soon(tm):
                            </span><br />
                            <span>
                                <strong>Date stopped: </strong>
                                :soon(tm):
                            </span><br />
                            <span>
                                <strong>Owner</strong>
                                :Some owner:
                            </span><br />
                            <a class="btn btn-primary pull-right" href="#raceId">Race detail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<%- include partials/_scripts.ejs %>
<%- include partials/_footer.ejs %>